{
  "name": "whatsapp-robot-2.0",
  "version": "2.0.0",
  "private": true,
  "description": "WhatsApp资金管理机器人 2.0 - 新一代群组资金管理工具",
  "author": "www.chenjiaqi.com@outlook.com",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:win": "start.bat",
    "start:demo": "electron start-simple.js",
    "build": "electron-builder --win --x64",
    "build:installer": "electron-builder --win --x64 --publish=never",
    "dist": "electron-builder --win --x64 --publish=never",
    "pack": "electron-builder --dir",
    "dev": "electron . --dev"
  },
  "build": {
    "appId": "com.whatsapp.bot.v2",
    "productName": "WhatsApp资金管理机器人 2.0",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!.git/**/*",
      "!*.log",
      "!convert-icon.js",
      "!data/session/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WhatsApp资金管理机器人 2.0",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh"
    },
    "extraFiles": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "logs",
        "to": "logs",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      },
      {
        "from": "logs",
        "to": "logs"
      }
    ],
    "asar": false
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "mathjs": "^11.12.0",
    "moment": "^2.29.4",
    "puppeteer-core": "^19.11.1",
    "qr-image": "^3.2.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.2"
  },
  "engines": {
    "node": ">=18"
  }
}
